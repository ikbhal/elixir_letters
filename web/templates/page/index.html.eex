<div id="letters-container">
<%= for {letter, count} <- @letters, letter_copy <- 1..count do %>
  <% colour = @colours |> Enum.shuffle |> Enum.take(1) %>
  <div class="letter draggable letter<%= letter %>" style="color: <%= colour %>" id="<%= letter %><%= letter_copy %>"><%= letter %></div>
<% end %>
</div>
